{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Live Server",
			"type": "shell",
			"command": "npx",
			"args": [
				"live-server",
				"--port=8080",
				"--open=index.html"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Watch SASS",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"watch:sass"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Build SASS",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build:sass"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Dev Mode",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}